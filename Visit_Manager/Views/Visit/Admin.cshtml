@model Visit_Manager.Models.Visit_model
@{
    ViewBag.Title = Resources.Global.Admin_panel;
}
<head>
    <title>@ViewBag.Title - @Html.Raw(Resources.Global.Visit_manager) </title>
    <link type="text/css" rel="stylesheet" href="~/Content/view_admin.css" />@*Custom style*@

    <script type="text/javascript" src="~/Scripts/view_admin.js"></script>@*Custom script*@
</head>

@Html.Partial("_Admin_modal_windows")

<!-- #region Navigation bar -->
<nav aria-label="...">
    <ul class="pager">
        <li>
            <a href="#" data-target="#modal_add_employee" data-toggle="modal">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                @Html.Raw(Resources.Global.New_employee)
            </a>
        </li>
        <li>
            <a href="#" data-target="#modal_edit_employee" data-toggle="modal" onclick="Get_users_to_ddl();">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                @Html.Raw(Resources.Global.Edit_remove_employee)
            </a>
        </li>
        <li>
            <a href="#" data-target="#modal_add_visit_type" data-toggle="modal">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                @Html.Raw(Resources.Global.New_visit_type)
            </a>
        </li>
        <li>
            <a href="#" data-target="#modal_edit_visit_type" data-toggle="modal" onclick="Get_visit_type_to_ddl();">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                @Html.Raw(Resources.Global.Edit_remove_visit_type)
            </a>
        </li>
        <li>
            <a href="#" data-target="#modal_change_password" data-toggle="modal">
                <i class="fa fa-cog" aria-hidden="true"></i>
                @Html.Raw(Resources.Global.Change_password)
            </a>
        </li>
    </ul>
</nav>
<!-- #endregion -->
<!-- #region Top chart -->
<div class="container">
    <div class=" row">
        <div class="col-md-12" id="top_chart">

            @*============top chart============*@

        </div>
    </div>
</div>
<hr />
<!-- #endregion -->
<!-- #region Date picker -->
<div class="container" id="div_dp_range">
    <div class="row">
        <div class=" col-md-4">
            <div class='input-group'>
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar "></span></span>
                <input class="form-control"
                       id="dp_range"
                       type="text"
                       name="daterange"
                       readonly="readonly"
                       onchange="Get_data_to_bottom_charts();" />

            </div>
        </div>
        <div class=" col-md-8">
            <h4>@Html.Raw(Resources.Global.Select_data_range)<span style="color:red;">&nbsp;@Html.Raw(Resources.Global.Completed)&nbsp;</span>@Html.Raw(Resources.Global._visits)</h4>
        </div>
    </div>
</div>

<!-- #endregion -->
<!-- #region Bottom charts -->
<div id="bottom_charts_div">
    <div class="container" id="bottom_charts">

        @*============top chart============*@

    </div>
    <br />
</div>
<!-- #endregion -->
